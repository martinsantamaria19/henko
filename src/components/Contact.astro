<section class="py-20 relative" id="contact">
    <div class="container mx-auto px-8 relative z-10">
        <div
            class="contact-card bg-[#ecf1f4] rounded-[3rem] p-12 md:p-20 shadow-2xl max-w-6xl mx-auto overflow-hidden relative"
        >
            <!-- Decorative Background -->
            <div
                class="absolute top-0 right-0 w-[600px] h-[600px] bg-gradient-to-br from-blue-100/50 to-purple-100/50 rounded-full blur-3xl -translate-y-1/2 translate-x-1/4 pointer-events-none"
            >
            </div>

            <div class="relative z-10">
                <div class="text-center mb-16">
                    <h3
                        class="contact-title text-5xl md:text-7xl font-black text-[#0F172A] mb-6 tracking-tight"
                    >
                        Hablemos
                    </h3>
                    <p
                        class="contact-subtitle text-slate-500 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed"
                    >
                        Estamos en Montevideo y trabajamos con empresas de todo
                        Uruguay. Contanos tu proyecto y veamos cómo podemos
                        potenciarlo.
                    </p>
                </div>

                <form class="space-y-8 max-w-4xl mx-auto">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="input-group group relative">
                            <input
                                type="text"
                                id="name"
                                placeholder=" "
                                class="peer w-full px-8 py-5 rounded-full border-2 border-transparent bg-white focus:border-blue-500 focus:ring-0 outline-none transition-all duration-300 placeholder-transparent shadow-sm hover:shadow-md"
                            />
                            <label
                                for="name"
                                class="absolute left-8 top-5 text-gray-400 text-base transition-all duration-300 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:text-base peer-focus:-translate-y-[1.1rem] peer-focus:text-xs peer-focus:text-blue-500 peer-focus:font-bold cursor-text pointer-events-none"
                            >
                                Nombre y Apellido
                            </label>
                        </div>
                        <div class="input-group group relative">
                            <input
                                type="email"
                                id="email"
                                placeholder=" "
                                class="peer w-full px-8 py-5 rounded-full border-2 border-transparent bg-white focus:border-blue-500 focus:ring-0 outline-none transition-all duration-300 placeholder-transparent shadow-sm hover:shadow-md"
                            />
                            <label
                                for="email"
                                class="absolute left-8 top-5 text-gray-400 text-base transition-all duration-300 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:text-base peer-focus:-translate-y-[1.1rem] peer-focus:text-xs peer-focus:text-blue-500 peer-focus:font-bold cursor-text pointer-events-none"
                            >
                                Email
                            </label>
                        </div>
                    </div>

                    <div class="input-group group relative">
                        <input
                            type="tel"
                            id="phone"
                            placeholder=" "
                            class="peer w-full px-8 py-5 rounded-full border-2 border-transparent bg-white focus:border-blue-500 focus:ring-0 outline-none transition-all duration-300 placeholder-transparent shadow-sm hover:shadow-md"
                        />
                        <label
                            for="phone"
                            class="absolute left-8 top-5 text-gray-400 text-base transition-all duration-300 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:text-base peer-focus:-translate-y-[1.1rem] peer-focus:text-xs peer-focus:text-blue-500 peer-focus:font-bold cursor-text pointer-events-none"
                        >
                            Teléfono o Celular
                        </label>
                    </div>

                    <div class="input-group group relative">
                        <textarea
                            id="message"
                            placeholder=" "
                            rows="5"
                            class="peer w-full px-8 py-5 rounded-[2rem] border-2 border-transparent bg-white focus:border-blue-500 focus:ring-0 outline-none resize-none transition-all duration-300 placeholder-transparent shadow-sm hover:shadow-md"
                        ></textarea>
                        <label
                            for="message"
                            class="absolute left-8 top-5 text-gray-400 text-base transition-all duration-300 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:text-base peer-focus:-translate-y-[1.1rem] peer-focus:text-xs peer-focus:text-blue-500 peer-focus:font-bold cursor-text pointer-events-none"
                        >
                            Mensaje
                        </label>
                    </div>

                    <div class="flex justify-center pt-4">
                        <button
                            type="submit"
                            class="magnetic-btn submit-btn group relative px-12 py-5 bg-[#0F172A] text-white font-bold rounded-full overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300"
                        >
                            <span
                                class="relative z-10 flex items-center gap-3 text-lg"
                            >
                                Enviar mensaje
                                <svg
                                    class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                                </svg>
                            </span>
                            <div
                                class="absolute inset-0 bg-blue-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left ease-out"
                            >
                            </div>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        // Entrance Animation
        const tl = gsap.timeline({
            scrollTrigger: {
                trigger: "#contact",
                start: "top 70%",
            },
        });

        tl.from(".contact-card", {
            y: 100,
            opacity: 0,
            duration: 1,
            ease: "power3.out",
        })
            .from(
                ".contact-title",
                {
                    y: 30,
                    opacity: 0,
                    duration: 0.8,
                    ease: "power3.out",
                },
                "-=0.5",
            )
            .from(
                ".contact-subtitle",
                {
                    y: 20,
                    opacity: 0,
                    duration: 0.8,
                    ease: "power3.out",
                },
                "-=0.6",
            )
            .from(
                "form .input-group",
                {
                    y: 30,
                    opacity: 0,
                    duration: 0.8,
                    stagger: 0.1,
                    ease: "power3.out",
                },
                "-=0.4",
            );
        // Removed explicit button animation to ensure visibility

        // Magnetic Button Effect Removed as per user request
    });
</script>

<style>
    /* Floating Label Logic */
    input:not(:placeholder-shown) ~ label,
    textarea:not(:placeholder-shown) ~ label,
    input:focus ~ label,
    textarea:focus ~ label {
        transform: translateY(-1.1rem);
        font-size: 0.75rem;
        color: #3b82f6;
        font-weight: 700;
    }
</style>
