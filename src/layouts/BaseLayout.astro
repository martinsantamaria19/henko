---
import "../styles/global.css";
const { title="Henko Media", description = "Agencia de Marketing Digital en Uruguay" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="font-sans bg-gray-50 text-gray-800">
    <!-- Header -->
    <nav class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-[90%] bg-white/30 border border-gray-200 rounded-full shadow-sm">
      <div class="flex justify-between items-center px-8 py-8">
    
        <!-- Logo -->
        <a href="/" class="flex items-center">
          <img src="src/assets/1-a.svg" alt="Henko Media" class="h-12 w-auto" />
        </a>
    
        <!-- Links -->
        <ul class="hidden md:flex gap-8 text-xl font-medium text-gray-700">
          <li>
            <a href="/" class="relative py-2 hover:text-blue-700 transition">
              Home
              <span class="absolute left-0 -bottom-0.5 w-0 h-[2px] bg-blue-700 transition-all duration-300 hover:w-full"></span>
            </a>
          </li>
          <li>
            <a href="#nosotros" class="relative py-2 hover:text-blue-700 transition">
              Nosotros
              <span class="absolute left-0 -bottom-0.5 w-0 h-[2px] bg-blue-700 transition-all duration-300 hover:w-full"></span>
            </a>
          </li>
          <li>
            <a href="#servicios" class="relative py-2 hover:text-blue-700 transition">
              Servicios
              <span class="absolute left-0 -bottom-0.5 w-0 h-[2px] bg-blue-700 transition-all duration-300 hover:w-full"></span>
            </a>
          </li>
          <li>
            <a href="#casos" class="relative py-2 hover:text-blue-700 transition">
              Casos
              <span class="absolute left-0 -bottom-0.5 w-0 h-[2px] bg-blue-700 transition-all duration-300 hover:w-full"></span>
            </a>
          </li>
          <li>
            <a href="#blog" class="relative py-2 hover:text-blue-700 transition">
              Blog
              <span class="absolute left-0 -bottom-0.5 w-0 h-[2px] bg-blue-700 transition-all duration-300 hover:w-full"></span>
            </a>
          </li>
          <li>
            <a href="#contacto" class="relative py-2 hover:text-blue-700 transition">
              Contacto
              <span class="absolute left-0 -bottom-0.5 w-0 h-[2px] bg-blue-700 transition-all duration-300 hover:w-full"></span>
            </a>
          </li>
        </ul>
    
        <!-- Menú móvil -->
        <button class="md:hidden flex flex-col gap-1">
          <span class="w-5 h-[2px] bg-gray-700"></span>
          <span class="w-5 h-[2px] bg-gray-700"></span>
          <span class="w-5 h-[2px] bg-gray-700"></span>
        </button>
      </div>
    </nav>

    <main>
      <slot /> <!-- contenido dinámico -->
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12 mt-16">
      <div class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="flex items-center gap-2">
          <div class="w-6 h-6 bg-blue-500 rounded-sm"></div>
          <span class="text-xl font-bold">HENKO</span>
        </div>
        <div class="text-center md:text-right">
          <p class="text-gray-300 mb-2">&copy; {new Date().getFullYear()} Henko Media - Todos los derechos reservados</p>
          <a href="mailto:hola@henko.com.uy" class="text-blue-400 hover:text-blue-300 transition-colors">hola@henko.com.uy</a>
        </div>
      </div>
    </footer>
  </body>
</html>
