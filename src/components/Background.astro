<div class="fixed inset-0 pointer-events-none z-0">
    <!-- Hero Background - Gray with curved shape on right -->
    <div class="absolute top-0 right-0 w-[60%] h-screen pointer-events-none">
        <svg
            viewBox="0 0 1000 1000"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="w-full h-full"
            preserveAspectRatio="none"
        >
            <path
                d="M200 0 C 200 400 0 600 0 1000 L 1000 1000 L 1000 0 Z"
                fill="#E2E8F0"
                opacity="0.3"></path>
        </svg>
    </div>

    <!-- Services Background - Blue gradient curve on right + dots pattern -->
    <div class="absolute top-[100vh] right-0 w-full h-[800px] pointer-events-none">
        <svg
            viewBox="0 0 1440 800"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="absolute top-0 right-0 w-full h-full"
            preserveAspectRatio="none"
        >
            <path
                d="M520 0C520 0 640 620 1440 520V0H520Z"
                fill="url(#blueGradientServices)"
            />
            <defs>
                <linearGradient
                    id="blueGradientServices"
                    x1="0%"
                    y1="0%"
                    x2="100%"
                    y2="0%"
                >
                    <stop
                        offset="0%"
                        style="stop-color:#E5F0FF;stop-opacity:1"></stop>
                    <stop
                        offset="100%"
                        style="stop-color:#DCEBFF;stop-opacity:1"></stop>
                </linearGradient>
            </defs>
        </svg>
        <!-- Dots pattern -->
        <div
            class="absolute inset-0 opacity-[0.4] pointer-events-none"
            style="background-image: radial-gradient(#CBD5E1 1.5px, transparent 1.5px); background-size: 26px 26px;"
        >
        </div>
    </div>

    <!-- SuccessCases Background - Concentric circles -->
    <div class="absolute top-[280vh] left-0 w-full h-[800px] pointer-events-none">
        <svg viewBox="0 0 1440 800" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full" preserveAspectRatio="xMidYMid slice">
            <circle cx="350" cy="-50" r="550" stroke="#E2E8F0" stroke-width="1.5" />
            <circle cx="350" cy="-50" r="750" stroke="#E2E8F0" stroke-width="1.5" />
            <circle cx="350" cy="-50" r="950" stroke="#E2E8F0" stroke-width="1.5" />
        </svg>
    </div>

    <!-- ClientsBlog Background - Gray blur element -->
    <div class="absolute top-[360vh] bottom-0 right-0 w-[50%] h-[80%] bg-gray-200/50 rounded-tl-[100px] blur-3xl pointer-events-none translate-x-1/4 translate-y-1/4"></div>
</div>

