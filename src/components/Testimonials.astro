<script>
    import { gsap } from "gsap";
    import { Draggable } from "gsap/Draggable";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(Draggable, ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        const track = document.getElementById("testimonials-track");
        const container = document.getElementById("testimonials-container");
        const progressBar = document.getElementById("progress-bar");

        if (track && container) {
            // Calculate bounds
            const updateBounds = () => {
                const trackWidth = track.scrollWidth;
                const containerWidth = container.offsetWidth;
                const minX = containerWidth - trackWidth;

                return { minX, containerWidth, trackWidth };
            };

            let { minX, containerWidth, trackWidth } = updateBounds();

            // Create Draggable
            Draggable.create(track, {
                type: "x",
                bounds: {
                    minX: minX - 50, // Add some resistance
                    maxX: 50,
                },
                inertia: true,
                edgeResistance: 0.65,
                dragResistance: 0.4, // Smoother drag
                onDrag: updateProgress,
                onThrowUpdate: updateProgress,
                snap: {
                    x: (value) => {
                        // Optional: Snap to card width + gap
                        // This is a simple approximation, for perfect snap we'd need exact card widths
                        return Math.round(value / 50) * 50;
                    },
                },
            });

            function updateProgress() {
                // @ts-ignore
                const x = this.x;
                const progress = Math.abs(x / minX);
                const clampedProgress = Math.min(Math.max(progress, 0), 1);

                if (progressBar) {
                    gsap.set(progressBar, {
                        scaleX: 0.2 + clampedProgress * 0.8, // Grow bar as we scroll
                        x: x * -0.1, // Parallax effect on bar
                    });
                }
            }

            // Resize handler
            window.addEventListener("resize", () => {
                const bounds = updateBounds();
                minX = bounds.minX;
                // Update draggable bounds if needed (Draggable usually handles this but good to be safe)
            });
        }
    });
</script>
