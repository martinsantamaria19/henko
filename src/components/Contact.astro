<section class="py-20 relative">

    <div class="container mx-auto px-8 relative z-10">
        <div class="bg-[#ecf1f4] rounded-3xl p-12 shadow-xl max-w-8xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl text-gray-500 mb-2">¿Tenés alguna duda?</h2>
                <h3 class="text-6xl font-black text-primary-dark">
                    Contactanos
                </h3>
            </div>

            <form class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <input
                        type="text"
                        placeholder="Nombre y Apellido"
                        class="w-full px-6 py-4 rounded-full border-none focus:ring-2 focus:ring-primary-light outline-none bg-white"
                    />
                    <input
                        type="email"
                        placeholder="Email"
                        class="w-full px-6 py-4 rounded-full border-none focus:ring-2 focus:ring-primary-light outline-none bg-white"
                    />
                </div>

                <input
                    type="tel"
                    placeholder="Teléfono o Celular"
                    class="w-full px-6 py-4 rounded-full border-none focus:ring-2 focus:ring-primary-light outline-none bg-white"
                />

                <textarea
                    placeholder="Mensaje"
                    rows="6"
                    class="w-full px-6 py-4 rounded-3xl border-none focus:ring-2 focus:ring-primary-light outline-none resize-none bg-white"
                ></textarea>

                <button
                    type="submit"
                    class="w-full bg-primary-dark text-white font-bold py-4 rounded-full hover:bg-opacity-90 transition-colors shadow-lg"
                >
                    Enviar mensaje
                </button>
            </form>
        </div>
    </div>
</section>
